<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Valorant">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:text="Tienda en linea"
        android:background="@color/design_default_color_primary"
        android:textSize="30sp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnInicio"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_marginTop="55dp"
        android:text="Volver a inicio"
        android:textSize="20sp"
        android:backgroundTint="#0000FF"/>


    <TextView
        android:id="@+id/lblValorant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitle"
        android:text="VALORANT POINTS"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"        />

    <Spinner
        android:id="@+id/spnValorant"
        android:entries="@array/spnvalo"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_below="@id/lblValorant"
        android:layout_marginStart="75dp"
        android:background="#30DACB"
        android:layout_marginTop="15dp" />





    <Button
        android:id="@+id/btnValo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="AÃ±adir al carrito"
        android:layout_below="@id/spnValorant"
        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:backgroundTint="#0FFF00"/>




</RelativeLayout>