<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/material_dynamic_primary10">


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tienda en linea"
        android:background="@color/design_default_color_primary"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txtTienda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENEBA"
        android:layout_below="@+id/txtTitle"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="@color/white" />





    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTienda"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        tools:srcCompat="@drawable/valll" />
    <TextView
        android:id="@id/PointsV"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView1"
        android:text="600 Valorant points \n              $6.99"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:layout_marginLeft="11dp"
        android:background="@color/material_dynamic_primary20"/>

    <Button
        android:id="@+id/btnA単adircarrito1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A単adir al carrito"
        android:layout_below="@+id/PointsV"
        android:layout_marginLeft="11dp"
        android:backgroundTint="@color/design_default_color_primary_variant" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTienda"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"

        tools:srcCompat="@drawable/valll" />

    <TextView
        android:id="@id/Points10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="11dp"
        android:background="@color/material_dynamic_primary20"
        android:text="1200 Valorant points \n             $11.99"
        android:textColor="@color/white"
        android:textSize="17dp" />

    <Button
        android:id="@+id/btnA単adircarrito1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A単adir al carrito"
        android:layout_below="@+id/Points10"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="11"
        android:backgroundTint="@color/design_default_color_primary_variant" />




</RelativeLayout>