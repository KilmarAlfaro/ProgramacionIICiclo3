<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#0C87B2">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tienda en linea "
        android:background="@color/design_default_color_primary"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/lblProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PRODUCTOS DIGITALES"
        android:layout_below="@+id/txtTitle"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/lblValorant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VALORANT POINTS"
        android:layout_below="@id/lblProductos"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"        />

    <Spinner
        android:id="@+id/spnValorant"
        android:entries="@array/spnvalo"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_below="@id/lblValorant"
        android:layout_marginStart="75dp"
        android:background="#30DACB"
        android:layout_marginTop="15dp" />





    <Button
        android:id="@+id/btnValo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="AÃ±adir al carrito"
        android:layout_below="@id/spnValorant"
        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:backgroundTint="#0FFF00"/>






    <ImageButton
        android:id="@+id/btnCarrito"
        android:contentDescription="Compras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#1EB20C"
        app:srcCompat="@drawable/carrito"/>


</RelativeLayout>